---
import Header from '../components/organisms/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en' dir='ltr'>
  <head>
    <meta charset='UTF-8' />
    <meta name='robots' content='index, follow' />
    <title>{title}</title>
    <meta
      name='description'
      content='Portfolio, where projects and experiences are shown web portfolio.'
    />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=5'
    />
    <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' />
    <meta property='og:title' content='Portfolio Marcos Lopez' />
    <meta
      property='og:description'
      content='Portfolio, where projects and experiences are shown web portfolio.'
    />
    <meta property='og:site_name' content='Portfolio Marcos Lopez' />
    <meta property='og:locale' content='es_ES' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://marcosic.netlify.app' />
    <meta name='al:android:app_name' content='Portfolio Marcos Lopez' />
    <meta name='al:ios:app_name' content='Portfolio Marcos Lopez' />
    <meta name='twitter:title' content='Portfolio Marcos Lopez' />
    <meta name='twitter:site' content='@MarcosLopez' />
    <meta
      name='twitter:description'
      content='Portfolio, where projects and experiences are shown web portfolio.'
    />
    <meta name='twitter:card' content='summary' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='author' href='https://www.linkedin.com/in/marcos-lopez-dev/' />
  </head>
  <body>
    <div class='app-container'>
      <Header />

      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --ml-accent-50: oklch(90.38% 0.034 20.07);
    --ml-accent-75: oklch(71.28% 0.115 20.31);
    --ml-accent-100: oklch(0.51 0.19 27.52);
    --ml-accent-200: oklch(44.37% 0.161 26.9);
    --ml-accent-300: oklch(39.58% 0.133 25.72);
    --ml-white-100: oklch(96.27% 0.0126 69.29909856448074);
    --ml-white-200: oklch(93.62% 0.0214 88.13);
    --ml-white-300: oklch(90.95% 0.0214 88.13);

    --ml-text-white: linear-gradient(
      180deg,
      #ffffff 0%,
      rgba(255, 255, 255, 0.6) 100%
    );
    --ml-text-red: linear-gradient(
      180deg,
      oklch(0.58 0.23 28.18) 10%,
      oklch(0.43 0.17 28.14 / 0.76) 100%
    );
  }

  *,
  ::after,
  ::before {
    box-sizing: border-box;
    min-width: 0;
    scrollbar-width: thin;
  }
  html {
    height: 100%;
    font-synthesis: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;

    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
  }
  @supports (font-variation-settings: normal) {
    html {
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        'Segoe UI',
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        'Open Sans',
        'Helvetica Neue',
        sans-serif;
    }
  }

  img {
    max-width: none;
  }
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-inline: 6dvw;

    background: #0f0227;
    font-family:
      'Montserrat',
      system-ui,
      -apple-system,
      sans-serif;
    color: #f5f5f5;
    min-height: 100dvh;
    max-width: 100dvw;
    direction: ltr;

    scroll-behavior: smooth;
    overflow-x: hidden;
    outline: none;
    overscroll-behavior-x: none;
    touch-action: manipulation;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  h7 {
    text-wrap: balance;
  }
  p,
  pre {
    text-wrap: pretty;
  }
  b,
  strong {
    font-weight: bold;
  }

  button {
    font-weight: 600;
    padding-inline: 1rem;
    padding-block: 0.5rem;
    border-radius: 1rem;
    width: 160px;
    font-size: 1rem;
    border-radius: 1.1rem;
  }

  ::-webkit-scrollbar {
    width: 2px;
    height: 2px;

    display: none;
  }
  ::-webkit-scrollbar button {
    width: 0px;
    height: 0px;
  }
  ::-webkit-scrollbar-thumb {
    background: transparent;
    border: 0px none transparent;
    border-radius: 50px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: transparent;
  }
  ::-webkit-scrollbar-thumb:active {
    background: transparent;
  }
  ::-webkit-scrollbar-track {
    background: transparent;
    border: 0px none transparent;
    border-radius: 50px;
  }
  ::-webkit-scrollbar-track:hover {
    background: transparent;
  }
  ::-webkit scrollbar-track:active {
    background: transparent;
  }
  ::-webkit-scrollbar-corner {
    background: transparent;
  }

  .app-container {
    min-height: 100dvh;
    max-width: 1800px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .red-title {
    color: var(--ml-accent-100);
  }
  .brightness {
    display: block;
    position: absolute;
    width: 50px;
    height: 50px;
    background: #2f1e4d8c;
    z-index: -1;
    opacity: 0.75;
    filter: blur(30px);
    top: 0px;
    left: 0px;
  }
</style>
