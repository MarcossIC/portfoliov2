---
import CoffeeIcon from '../atoms/CoffeeIcon.astro'
import GithubIcon from '../atoms/GithubIcon.astro'
import GmailIcon from '../atoms/GmailIcon.astro'
import Link from '../atoms/Link.astro'
import LinkedinIcon from '../atoms/LinkedinIcon.astro'
import LogoV2 from '../atoms/LogoV2.astro'
import SocialButton from '../molecules/SocialButton.astro'
---

<footer class='flex flex-col mt-4 pt-8 pb-0 overflow-wrap break-all'>
  <div class='footer-bg'>
    <svg data-name='Layer 1' viewBox='0 0 1200 120' preserveAspectRatio='none'>
      <path
        d='M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z'
        class='shape-fill'></path>
    </svg>
  </div>

  <div class='flex flex-col pb-4 min-[1080px]:flex-row pt-4 min-[1080px]:pt-[100px]'>
    <div
      class='flex flex-col gap-x-4 mb-6 flex-[.6] items-center justify-center min-[1080px]:mb-0 min-[1080px]:flex-row'
    >
      <LogoV2 />
      <h2
        class='bg-ml-text-white bg-clip-text !text-transparent fill-transparent text-[2rem] font-semibold -mt-[10px] min-[1080px]:mt-0'
      >
        Marcos Lopez
      </h2>
    </div>
    <div class='flex flex-col flex-[.5] justify-start items-center mb-7 min-[1080px]:my-0'>
      <div>
        <h3 class='font-bold text-[1.45rem]'>Navigation</h3>
        <ul class='flex flex-col gap-y-1 mt-2' role='list'>
          <li role='listitem' aria-label='Go to hero'>
            <Link to='#hero' target='_self' styles='mr-4 link-active'>
              Hero
            </Link>
          </li>
          <li role='listitem' aria-label='Go to Projects'>
            <Link to='#projects' target='_self' styles='mr-4 link-active'>
              Projects
            </Link>
          </li>
          <li>
            <Link to='#about' target='_self' styles='mr-4 link-active'>
              About
            </Link>
          </li>
          <li role='listitem' aria-label='Go to Contact'>
            <Link to='#contact' target='_self' styles='mr-4 link-active'>
              Contact
            </Link>
          </li>
        </ul>
      </div>
    </div>

    <div class='flex-1 flex flex-col-reverse justify-center items-center gap-y-6'>
      <div class='flex w-full justify-center pb-4'>
        <ul
          class='flex flex-col gap-y-4'
          role='list'
          aria-label='Contact information'
        >
          <li
            class='flex relative gap-x-4'
            role='listitem'
            aria-label='Address'
          >
            <svg
              class='w-6 h-6 min-[1500px]:w-8 min-[1500px]:h-8'
              role='complementary'
              aria-disabled='true'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M15 10.5a3 3 0 11-6 0 3 3 0 016 0z'></path>
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z'
              ></path>
            </svg>
            Argentina, Misiones, Posadas
          </li>
          <li class='flex relative gap-x-4' role='listitem' aria-label='Email'>
            <svg
              class='w-6 h-6 min-[1500px]:w-7 min-[1500px]:h-7'
              role='complementary'
              aria-disabled='true'
              fill='none'
              viewBox='0 0 24 24'
              stroke-width='1.5'
              stroke='currentColor'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                d='M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75'
              ></path>
            </svg>
            <img
              src='/email.svg'
              role='img'
              aria-describedby='email'
              aria-label='Email in image format, for security'
              class='min-[1500px]:w-[18]'
              alt='Marcos Lopez Email'
            />
          </li>
        </ul>
      </div>
      <div
        class='flex flex-row gap-x-5 justify-center items-center relative me-[5%]'
      >
        <SocialButton
          socialUri='https://www.linkedin.com/in/marcos-lopez-dev'
          title='Button to linkedIn profile'
          styles='bg-[#0A66C2] fill-white p-[8px]'
        >
          <LinkedinIcon />
        </SocialButton>
        <SocialButton
          socialUri='https://github.com/MarcossIC'
          title='Button to github profile'
          styles='bg-[#00000085] fill-white p-[4px]'
        >
          <GithubIcon />
        </SocialButton>
        <SocialButton
          socialUri='mailto:marcoslopezdev18@gmail.com?subject=Hey%20Marcos%20how%20are%20you'
          target='_self'
          title='Button for send email to marcoslopezdev18@gmail.com'
          styles='bg-[#fff] p-[4px]'
        >
          <GmailIcon />
        </SocialButton>

        <SocialButton
          socialUri='https://drive.google.com/file/d/1znfQJffUhuawHnsKnSUGa6aGtnA9q1OY/view?usp=sharing'
          target='_self'
          styles='cv p-[4px] font-bold bg-[var(--ml-accent-100)]'
        >
          <span
            class='absolute top-[48%] left-[50%] -translate-x-2/4 -translate-y-2/4 text-xl text-nowrap'
            >CV</span
          >
        </SocialButton>
      </div>
    </div>
  </div>

  <div
    class='w-full mt-auto flex mx-auto justify-center item-center gap-x-3 pb-1'
  >
    <CoffeeIcon /><small>Developed by Marcos Lopez</small>
  </div>
</footer>

<style>
  footer {
    width: 100%;
    position: relative;
    background: #210652;

    :global(.logo) {
      flex: 0.5;
      justify-content: center;
      display: flex !important;

      :global(img) {
        width: 120px;
        min-width: 120px;
      }
    }

    :global(.link-active) {
        font-weight: 500;
      color: #e7e7e7;
      opacity: 0.75;
      transition-timing-function: cubic-bezier(0.4, 0, 1, 1);
      transition-duration: 150ms;
      transition-property: all;

      &:hover {
        opacity: 1;
        color: #fff;
      }
    }
  }

  .footer-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }
  .footer-bg .shape-fill {
    fill: #0f0227;
  }
</style>
