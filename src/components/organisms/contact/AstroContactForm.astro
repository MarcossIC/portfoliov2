---
import ContactFieldText from './ContactFieldText.astro'
import ContactSendButton from './ContactSendButton.astro'
import ContactTextAreaField from './ContactTextAreaField.astro'
import ContactForm from "../../react/ContactForm.jsx"
---

<ContactForm>
  <ContactSendButton />
</ContactForm>

<style>
  :global(form.contact-form::before) {
    position: absolute;
    content: '';
    width: 40%;
    height: 40%;
    right: 1%;
    z-index: -1;
    background: radial-gradient(
      circle,
      rgb(102 4 200) 20%,
      rgb(43 5 96) 60%,
      rgb(36 3 83) 100%
    );
    filter: blur(70px);
    border-radius: 50%;
  }
</style>
