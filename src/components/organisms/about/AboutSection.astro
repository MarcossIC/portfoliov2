---
import SecondTitle from '../../atoms/SecondTitle.astro'
import AboutBento from './AboutBento.astro'
---

<section
  id='about'
  class='max-w-[100vw] flex flex-col w-[99%] flex-1 justify-center items-center'
>
  <SecondTitle sub='A small selection of some of my latest works'
    >About me</SecondTitle
  >

  <AboutBento />
  <div class='clean-bg'></div>
</section>

<style>
  section {
    background: linear-gradient(90deg, transparent, #12032ee6, transparent);
  }
  .clean-bg {
    width: 100%;
    height: 50px;
    background: linear-gradient(180deg, rgb(18 3 46 / 15%) 0%, #0f0227f5);
  }
</style>
