---
import DevProductivity from '../../atoms/DevProductivity.astro'
import DevPullRequest from '../../atoms/DevPullRequest.astro'
import LittlePlant from '../../atoms/LittlePlant.astro'
import LogoV2 from '../../atoms/LogoV2.astro'
import ReverseLittlePlant from '../../atoms/ReverseLittlePlant.astro'
import BentoItem from '../../templates/BentoItem.astro'
---

<BentoItem class='bento-item-4'>
  <LittlePlant />
  <DevProductivity />
  <LogoV2 />
  <DevPullRequest />
  <ReverseLittlePlant />
</BentoItem>

<style>
  :global(.bento-item-4) {
    width: var(--bento-w-col-2);
    min-width: 215px;
    grid-area: logoIam;
    height: 100%;
    display: flex;
    --visible: none;
    --logo-w: 165px;

    :global(.logo) {
      display: flex !important;
      flex: 1 1;
      justify-content: center;

      :global(img) {
        width: var(--logo-w);
      }
    }

    :global(#normal-plant) {
      position: absolute;
      bottom: 1px;
      left: -8px;
    }
    :global(#reverse-plant) {
      position: absolute;
      bottom: 1px;
      right: -8px;
    }
    :global(#dev-productivity) {
      display: var(--visible);
      position: absolute;
      top: -12px;
      left: 28px;
    }
    :global(#dev-pull-req) {
      display: var(--visible);
      position: absolute;
      top: -12px;
      right: 10%;
    }
  }

  @media only screen and (min-width: 840px) {
    :global(.bento-item-4) {
     
      min-width: var(--bento-min-w-col-2);
      max-width: var(--bento-max-w-col-2);
      --visible: block;
      --logo-w: 140px;
    }
  }

  @media only screen and (min-width: 1100px) {
    .bento-item-4 {
      :global(#dev-pull-req) {
        right: 100px;
      }
    }
  }
  @media only screen and (min-width: 1480px) {
    :global(.bento-item-4) {
      height: 135px;
    }
  }
</style>
