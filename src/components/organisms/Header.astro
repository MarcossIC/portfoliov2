---
import LogoV2 from '../atoms/LogoV2.astro'
import Navigate from '../molecules/Navigate.astro'
import ResumeButton from '../molecules/ResumeButton.astro'
---

<header id='header'>
  <div class='header-container'>
    
    <nav class='navigation'>
      <Navigate text='Projects' to='#projects' />
      <Navigate text='About' to='#about' />
      <Navigate text='Contact' to='/' />
    </nav>
  </div>
</header>

<style>
  header {
    max-width: 1800px;
    width: 100%;
    height: 4.375rem;

    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-block-end: 0.5rem;
    padding-block-start: 0.5rem;
  }

  .header-container {
    width: 100%;

    background: transparent;
    display: flex;
    flex: 1 1;
    align-items: center;
    justify-content: space-between;

    padding-inline: 6dvw;
  }

  .navigation {
    font-weight: 500;
    display: flex;
    justify-self: center;
    column-gap: 3rem;
    flex: 1 1;
    justify-content: center;
    padding-block-end: 3px;
  }

  .resume-btn {
    display: none;
    justify-content: flex-end;
    align-items: center;
    flex: 1 1;

    padding-block-end: 1px;
    padding-block-end: 3px;
  }

  @media only screen and (min-width: 841px) {
    .resume-btn {
      display: flex;
    }
  }

  @media only screen and (max-width: 700px) {
    .header-container {
      justify-content: center;
      align-items: center;
      justify-items: center;
      align-content: center;
      display: flex;
      margin-block-start: 1rem;
    }
  }

  @media only screen and (min-width: 1140px) {
    .header-container {
      justify-content: space-around;
    }
  }

  @media screen and (min-width: 1580px) {
    .header-container {
      justify-content: space-between;
    }
    .navigation {
      font-size: 1.8rem;
      column-gap: 2rem;
    }
  }

  @keyframes addShadow {
    100% {
      box-shadow: 0 5px 5px -3px hsla(0, 0%, 100%, 0.25);
      background: rgba(0, 0, 0, 0.2);
      -webkit-backdrop-filter: blur(10px);
      backdrop-filter: blur(10px);
    }
  }
</style>
