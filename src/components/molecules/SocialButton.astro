---
import Link from '../atoms/Link.astro'
import RotationWraper from '../legacy/RotationWraper.astro'

interface Props {
  socialUri: string
  target?: string
  title?: string
  styles?: string
}

const { socialUri, target = '_blank', title = '', styles = '' } = Astro.props
---

<Link to={socialUri} target={target} styles='social-link' title={title}>
  <div
    class='text-center w-[30px] h-[30px] rounded-full icon'
    aria-hidden='true'
    role='img'
    class:list={[`${styles}`]}
  >
    <slot />
  </div>
</Link>

<style is:global>
  .social-link {
    width: fit-content;
    display: inline-block;
    object-fit: cover;
    transition-property: transform, filter;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
    position: relative;

    &:hover {
      box-shadow:
        0 0 #0000,
        0 0 #0000,
        0 0 #0000,
        0 0 #0000,
        0 10px 15px -3px rgb(0 0 0 / 0.1),
        0 4px 6px -4px rgb(0 0 0 / 0.1);
      transform: translate(0, -4px) rotate(0) skewX(0) skewY(0) scaleX(1.1)
        scaleY(1.1);
      filter: contrast(1.25);
    }
  }

  div.icon {
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;

    svg {
      width: 29px;
      height: 29px;
      min-width: 29px;
      min-height: 29px;
      top: 50% !important;
      left: 50% !important;
      translate: -50% -55% !important;
    }
  }
</style>
